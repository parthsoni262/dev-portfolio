<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= @set_title %></title>

    <meta name="keywords" conternt=<%= @seo_keyowrds %>>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "shared/blog_header" %>

    <%= render "shared/blog_nav" %>

    <div class="container">
      <div class="row">

        <%= yield %>

        <%= render "shared/blog_sidebar" %>

        <%= source_helper("blog") %>

      </div>

      <%= render "shared/blog_footer" %>
    </div>    
  </body>
</html>